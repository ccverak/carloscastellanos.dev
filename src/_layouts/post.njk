---
layout: base-blog.njk
section: post
templateClass: tmpl-post
---
<article class="markdown">
  <header class="bg-white sans-serif">
    
      <h1 class="mb-0">{{ title }}</h1>
      <div class="pt-0 mb-4">
        <time datetime="{{ page.date | machineDate }}">
          <span>{{ page.date | readableDate }}</span>
        </time>
        •
        <span class="">{{ content | readingTime }}
          read</span>
        •
        <a href="/posts/categories/{{ category }}" class="shadow-focus transition-all duration-300 hover:bg-link downcase">
          {{ category }}
        </a>
      </div>
    
  </header>

  {{ content | safe }}
</article>

<div class="pt-8">
  <p class="">Have some comments or feedback? <a class="shadow-focus transition-all duration-300 hover:bg-link" href="https://mobile.twitter.com/search?q={{ page | fullEncodedUrl }}">Discuss it on twitter</a></p>
</div>

